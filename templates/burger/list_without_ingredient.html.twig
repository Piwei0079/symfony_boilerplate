{% extends 'base.html.twig' %}

{% block title %}Burgers sans {{ ingredient_name }} ({{ ingredient_type }}){% endblock %}

{% block body %}
    <h1>Burgers sans {{ ingredient_name }} ({{ ingredient_type }})</h1>

    {% if burgers is not empty %}
        <ul>
            {% for burger in burgers %}
                {# Lien vers la page de détail du burger #}
                <li>
                    <a href="{{ path('burger_detail', {id: burger.id}) }}">{{ burger.name }}</a> - {{ burger.price|number_format(2, ',', ' ') }} €
                </li>
            {% endfor %}
        </ul>
    {% else %}
        <p>Aucun burger trouvé sans {{ ingredient_name }} ({{ ingredient_type }}).</p>
    {% endif %}

    {# Optionnel: Lien de retour vers la liste complète ou la page d'accueil #}
    <p><a href="{{ path('burger_list') }}">← Retour à la liste de tous les burgers</a></p>
{% endblock %}