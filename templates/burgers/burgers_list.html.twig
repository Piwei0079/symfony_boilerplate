
{% extends 'base.html.twig' %}

{% block title %}Liste des burgers !{% endblock %}

{% block content %}
<h1 class="text-2xl font-bold text-center">Liste des burgers</h1>
<div>
 {% if burgers is defined and burgers is not empty %} 
                {% for burger in burgers %}
                    <div class="bg-white rounded-lg shadow-md p-6"> 
                        <h2 class="text-xl mb-2">{{ burger.nom | default('Nom inconnu') }}</h2> 
                        <p class="mb-4">{{ burger.description | default('Pas de description') }}</p> 
                        <p class="font-bold">{{ burger.prix | default('Prix inconnu') }} €</p> 
                    </div>
                {% endfor %}
            {% else %}
                <p class="text-center">Aucun burger n'a été trouvé pour le moment.</p>
            {% endif %}
</div>

{% endblock %}


